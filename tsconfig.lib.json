{
  "extends": "./tsconfig",
  "compilerOptions": {
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "declaration": true,
    "composite": false,
    "incremental": false,
    "emitDeclarationOnly": true,
    "jsx": "preserve"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/tysts.ts", "**/tests.ts", "**/tests.tsx"]
}
